{
  "name": "oneawebmarketing/php-sepa",
  "type": "library",
  "description": "PHP class to create German SEPA files (XML) for credit transfer and direct debit.",
  "keywords": ["banking", "sepa", "xml"],
  "homepage": "https://github.com/ufozone/php-sepa/",
  "license": "BSD-2-Clause",
  "authors": [
    {
      "name": "ufozone",
      "homepage": "https://ufozone.de/"
    },
    {
      "name": "sbeinert",
      "homepage": "https://1awebmarketing.de/"
    }
  ],
  "support": {
    "issues": "https://github.com/ufozone/php-sepa/issues"
  },
  "require": {
    "php": "^7.0|^8.0|^8.1|^8.2|^8.3"
  },
  "autoload": {
    "psr-4": {
      "ufozone\\phpsepa\\": "src/lib/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0|^11.0|^12.3",
    "phpstan/phpstan": "^2.0"
  },
  "scripts": {
    "phpstan": "vendor/bin/phpstan analyse",
    "phpstan-cc": "vendor/bin/phpstan clear-result-cache",
    "phpstan-dp": "vendor/bin/phpstan dump-parameters",
    "phpunit": "vendor/bin/phpunit"
  },
  "scripts-descriptions": {
    "phpstan": "runs `vendor/bin/phpstan analyse`",
    "phpstan-cc": "runs `vendor/bin/phpstan clear-result-cache`",
    "phpstan-dp": "runs `vendor/bin/phpstan dump-parameters`",
    "phpunit": "runs `vendor/bin/phpunit`"
  }
}